<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <div id="classificationBox">
    <form id="classificationForm" action="/inv/add-classification" method="post">
        <div>
            <p>        
                <i style="font-size: 12px;">FIELD IS REQUIRED.</i>
            </p>
            <p>
                <label for="classification_name">Classification Name: </label>
                <input type="text" name="classification_name" id="classification_name" pattern="[a-zA-Z]+" title="Name must be alphanumeric characters only" value="<%= locals.classification_name %>" required>
            </p>
            <p>        
                <i style="font-size: 12px;">NAME MUST BE ALPHABETIC CHARACTERS ONLY.</i>
            </p>
            <button type="submit">Add Classification</button>
        </div>
    </form>
</div>
